{
  "name": "frontend",
  "version": "1.0.0",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "fetch:electron": "node ./scripts/fetch-electron.mjs",
    "prestart": "pnpm run fetch:electron",
    "predev": "pnpm run fetch:electron",
    "start": "NODE_ENV=development node ./scripts/run-electron.mjs .",
    "dev:main": "NODE_ENV=development nodemon --watch electron --ext js,json --exec \"node ./scripts/run-electron.mjs .\"",
    "dev:app": "npm-run-all --parallel dev:main start",
    "dev": "npm-run-all --parallel dev:css dev:js dev:app",
    "dev:css": "pnpm exec tailwindcss -i ./renderer/input.css -o ./renderer/tailwind.css -w",
    "dev:js": "node ./scripts/build-frontend.mjs --watch",
    "build:js": "node ./scripts/build-frontend.mjs",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs",
    "format": "prettier -w .",
    "postinstall": "node ./scripts/postinstall.mjs",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "rebuild:sqlite": "npm_config_runtime=electron npm_config_target=38.0.0 npm_config_disturl=https://electronjs.org/headers npm_config_arch=arm64 pnpm rebuild better-sqlite3",

    "build:app": "electron-builder -c electron-builder.yml",
    "build:mac": "electron-builder -m -c electron-builder.yml",
    "build:win": "electron-builder -w -c electron-builder.yml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tailwindcss/cli": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "electron": "38",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rebuild": "^0.1.2",
    "tailwindcss": "^4.1.13"
  },
  "type": "commonjs",
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.6",
    "better-sqlite3": "^12.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.5"
  }
}